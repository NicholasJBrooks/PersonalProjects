@using System.Collections.ObjectModel;
@model IQueryable<Transaction> 

@{
    Layout = "_Layout";
 }

<script src="~/js/ImportAFIle.js"></script>

<div class="col-12">
    <button class="btn btn-block" onclick="ChooseFile()">Import File</button>
    <button class="btn btn-block" onclick="InputTransaction()">Input Transaction</button>
</div>
<div id="popup" class="col-12 popup"></div>
<table class="table table-striped table-bordered col-12">
    <thead>
        <tr>
            <td>Date</td><td>Category</td><td>Description</td><td>Amount</td>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            @foreach (Transaction trans in Model)
            {
                <tr>
                    <td>@trans.Date</td>
                    <td>@trans.Category</td>
                    <td>@trans.Description</td>
                    <td>@trans.Amount</td>
                </tr>
            }
        }
    </tbody>
</table>

<form action="@Url.Action("SaveToTransactionDB", "Import")" method="POST">
    <input type="hidden" name="transactions" value="@Model">
    <button class="btn btn-block" type="submit" >Save Transactions</button>
</form>
                